<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@color/white"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <include
  android:layout_width="fill_parent"
  android:layout_height="40dip"
  layout="@layout/base_title"/>
  <FrameLayout
  android:layout_width="fill_parent"
  android:layout_height="45dip">
  <ImageView
  android:layout_width="fill_parent"
  android:layout_height="45dip"
  android:scaleType="fitCenter"
  android:background="@drawable/order_tab1"
  android:id="@+id/order_back_top_img"/>
  
  <LinearLayout
  android:visibility="visible"
  android:layout_width="fill_parent"
  android:layout_height="45dip"
  android:id="@+id/order_back_tabs"
  android:gravity="center_vertical"
  android:weightSum="4.0"
  >
  <Button
  android:layout_width="wrap_content"
  android:layout_height="45dip"
  android:id="@+id/order_back_tab1"
  android:layout_weight="1.0"
  android:background="@android:color/transparent"
  android:text=""/>
  <Button
  android:layout_width="wrap_content"
  android:layout_height="45dip"
  android:id="@+id/order_back_tab2"
  android:layout_weight="1.0"
  android:background="@android:color/transparent"
  android:text=""/>
  <Button
  android:layout_width="wrap_content"
  android:layout_height="45dip"
  android:id="@+id/order_back_tab3"
  android:layout_weight="1.0"
  android:background="@android:color/transparent"
  android:text=""/>
  <Button
  android:layout_width="wrap_content"
  android:layout_height="45dip"
  android:id="@+id/order_back_tab4"
  android:layout_weight="1.0"
  android:background="@android:color/transparent"
  android:text=""/>
  </LinearLayout>
  </FrameLayout>
  <ViewFlipper
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:id="@+id/order_back_flipper">
  <include
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  layout="@layout/order_back_bug"/>
  <include
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  layout="@layout/order_back_business"/>
  <include
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  layout="@layout/order_back_evaluate"/>
  <include
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  layout="@layout/order_back_ensure"/>
  </ViewFlipper>
</LinearLayout>
