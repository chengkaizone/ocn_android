<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:background="@color/white"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <include
  android:layout_width="match_parent"
  android:layout_height="40dip"
  layout="@layout/base_title"/>
  <ScrollView
  android:background="@color/white"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <LinearLayout
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  <LinearLayout style="@style/east_layout_mwv"
  android:background="@color/white">
  <LinearLayout
  android:orientation="vertical"
  android:padding="6dip"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  style="@style/text_black_title"
  android:text="维修单号:"/>
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  style="@style/text_black_title"
  android:paddingLeft="6dip"
  android:id="@+id/order_back_no"
  android:text=""/>
  </LinearLayout>
  <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  style="@style/text_black_title"
  android:text="用户姓名:"/>
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  style="@style/text_black_title"
  android:paddingLeft="6dip"
  android:id="@+id/order_back_name"
  android:text=""/>
  </LinearLayout>
  <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  style="@style/text_black_title"
  android:text="联系电话"/>
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  style="@style/text_black_title"
  android:paddingLeft="6dip"
  android:autoLink="phone"
  android:id="@+id/order_back_phone"
  android:text=""/>
  </LinearLayout>
  </LinearLayout>
  </LinearLayout>
  <ImageView style="@style/east_common_line"/>
  <TextView
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  style="@style/text_black_ensure_head"
  android:text="排障结果:"/>
  <Spinner
  style="@style/east_spinner_style"
  android:entries="@array/order_back_result"
  android:id="@+id/order_back_result"/>
  <ImageView style="@style/east_common_line"/>
  <TextView
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  style="@style/text_black_ensure_head"
  android:text="选择操作"/>
  <Button 
  	style="@style/list_title_style"
	android:id="@+id/order_back_gy" 
	android:background="@drawable/east_big_button"
	android:layout_width="match_parent" 
	android:layout_height="wrap_content"
	android:layout_marginLeft="15dip" 
	android:layout_marginTop="6dip"
	android:layout_marginRight="15dip" 
	android:text="改约"
	/>
	<Button 
  	style="@style/list_title_style"
	android:id="@+id/order_back_gp" 
	android:background="@drawable/east_big_button"
	android:layout_width="match_parent" 
	android:layout_height="wrap_content"
	android:layout_marginLeft="15dip" 
	android:layout_marginTop="6dip"
	android:layout_marginRight="15dip" 
	android:text="改派"
	/>
	<Button 
  	style="@style/list_title_style"
	android:id="@+id/order_back_hd" 
	android:background="@drawable/east_big_button"
	android:layout_width="match_parent" 
	android:layout_height="wrap_content"
	android:layout_marginLeft="15dip" 
	android:layout_marginTop="6dip"
	android:layout_marginRight="15dip" 
	android:text="回单"
	/>
	<Button 
  	style="@style/list_title_style"
	android:id="@+id/order_back_td" 
	android:background="@drawable/east_big_button"
	android:layout_width="match_parent" 
	android:layout_height="wrap_content"
	android:layout_marginLeft="15dip" 
	android:layout_marginTop="6dip"
	android:layout_marginRight="15dip" 
	android:text="退单"
	/>
	</LinearLayout>
</ScrollView>
</LinearLayout>