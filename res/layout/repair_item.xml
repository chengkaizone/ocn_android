<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:padding="6dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="6dip"
            android:background="@drawable/order_item_title">
        <ImageView
                android:paddingLeft="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/order_icon"
                android:id="@+id/repair_icon"
                android:layout_centerVertical="true"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/repair_item_addr"
                android:layout_toRightOf="@id/repair_icon"
                android:text="用户地址:"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:textColor="#ff0000ff"
                android:gravity="center_vertical"
                android:paddingLeft="6dip"
                />
    </RelativeLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dip"
            android:background="@drawable/order_item_bg"
            >
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修单号:"
                    style="@style/text_black_title"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/repair_item_no"
                    android:paddingLeft="6dip"
                    android:text="维修号"
                    style="@style/text_black_title"/>
        </LinearLayout>




        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户姓名:"
                    style="@style/text_black_title"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/repair_item_name"
                    android:paddingLeft="6dip"
                    style="@style/text_black_title"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户证号:"
                    style="@style/text_black_title"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_item_accountNo"
                    android:paddingLeft="6dip"
                    style="@style/text_black_title"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创建时间:"
                    style="@style/text_black_title"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/repair_item_ctime"
                    android:paddingLeft="6dip"
                    style="@style/text_black_title"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报修类型:"
                    style="@style/text_black_title"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/repair_item_crtype"
                    android:paddingLeft="6dip"
                    style="@style/text_black_title"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约结果:"
                    style="@style/text_black_title"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reserve_result"
                    android:paddingLeft="6dip"
                    style="@style/text_black_title"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约上门时间:"
                    style="@style/text_black_title"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/repair_item_ptime"
                    android:paddingLeft="6dip"
                    style="@style/text_black_title"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备信息:"
                    style="@style/text_black_title"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/repair_item_divicename"
                    android:paddingLeft="6dip"
                    style="@style/text_black_title"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="故障描述:"
                    style="@style/text_black_title"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/repair_item_bug"
                    android:paddingLeft="6dip"
                    style="@style/text_black_title"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注信息:"
                    style="@style/text_black_title"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/repair_item_remark"
                    android:paddingLeft="6dip"
                    style="@style/text_black_title"/>
        </LinearLayout>
        <LinearLayout
                android:paddingTop="6dip"
                android:paddingBottom="6dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话:"
                    style="@style/text_black_title"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/repair_item_phone"
                    android:paddingLeft="6dip"
                    android:autoLink="phone"
                    style="@style/text_black_title"/>
        </LinearLayout>
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="2dip"
                android:scaleType="fitCenter"
                android:background="@drawable/order_divider"/>
        <TableLayout
                android:stretchColumns="0,1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TableRow>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/repair_item_btn1"
                        android:text="登记"
                        android:gravity="center"
                        android:background="@drawable/east_big_button"
                        style="@style/text_black_title"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/repair_item_btn2"
                        android:text="填写维修信息"
                        android:gravity="center"
                        android:background="@drawable/east_big_button"
                        style="@style/text_black_title"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>