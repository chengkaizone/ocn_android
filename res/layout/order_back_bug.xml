<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
<LinearLayout
  android:orientation="vertical"
  android:padding="6dip"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <LinearLayout
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  style="@style/text_black_title"
  android:text="故障分类(*)"/>
  <Spinner
  style="@style/east_spinner_style"
  android:id="@+id/order_back_bug1"/>
  </LinearLayout>
  <LinearLayout
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  style="@style/text_black_title"
  android:text="解决手段(*)"/>
  <Spinner
  style="@style/east_spinner_style"
  android:id="@+id/order_back_bug2"/>
  </LinearLayout>
  <ImageView style="@style/east_common_line"/>
  <LinearLayout
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  style="@style/text_black_title"
  android:text="故障原因(*)"/>
  <Spinner
  style="@style/east_spinner_style"
  android:id="@+id/order_back_bug3"/>
  </LinearLayout>
  <LinearLayout
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  style="@style/text_black_title"
  android:text="故障等级(*)"/>
  <Spinner
  style="@style/east_spinner_style"
  android:id="@+id/order_back_bug4"/>
  </LinearLayout>
  <ImageView style="@style/east_common_line"/>
  <LinearLayout
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  style="@style/text_black_title"
  android:text="故障表象(*)"/>
  <RelativeLayout
  android:background="@drawable/spinner_selector"
  android:layout_width="fill_parent"
  android:layout_height="50dip"
  android:paddingRight="40dip"
  android:layout_marginLeft="6dip"
  android:layout_marginRight="6dip"
  android:id="@+id/order_back_btn_bug5"
  >
  <TextView
  android:layout_centerVertical="true"
  android:layout_width="wrap_content"
  android:layout_height="50dip"
  android:gravity="center"
  android:padding="5dip"
  android:text="0"
  android:textColor="@color/blue"
  android:layout_alignParentRight="true"
  android:id="@+id/spinner_number5"/>
  <TextView
  android:layout_centerVertical="true"
  android:layout_width="fill_parent"
  android:layout_height="50dip"
  android:paddingLeft="10dip"
  android:fadingEdge="none"
  android:textColor="@color/blue"
  android:scrollHorizontally="true"
  android:focusableInTouchMode="true"
  android:focusable="true"
  android:ellipsize="marquee"
  android:marqueeRepeatLimit="marquee_forever"
  android:layout_toLeftOf="@+id/spinner_number5"
  android:layout_alignParentLeft="true"
  android:gravity="center_vertical|left"
  android:id="@+id/spinner_data5"
  />
  
  </RelativeLayout>
  </LinearLayout>
  <ImageView style="@style/east_common_line"/>
  <LinearLayout
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  style="@style/text_black_title"
  android:text="排障手段(*)"/>
  <RelativeLayout
  android:background="@drawable/spinner_selector"
  android:layout_width="fill_parent"
  android:layout_height="50dip"
  android:paddingRight="40dip"
  android:layout_marginLeft="6dip"
  android:layout_marginRight="6dip"
  android:id="@+id/order_back_btn_bug6"
  >
  <TextView
  android:layout_centerVertical="true"
  android:layout_width="wrap_content"
  android:layout_height="50dip"
  android:gravity="center"
  android:padding="5dip"
  android:text="0"
  android:layout_alignParentRight="true"
  android:textColor="@color/blue"
  android:id="@+id/spinner_number6"/>
  <TextView
  android:layout_centerVertical="true"
  android:layout_width="fill_parent"
  android:layout_height="50dip"
  android:paddingLeft="10dip"
  android:fadingEdge="none"
  android:textColor="@color/blue"
  android:scrollHorizontally="true"
  android:focusableInTouchMode="true"
  android:focusable="true"
  android:ellipsize="marquee"
  android:marqueeRepeatLimit="marquee_forever"
  android:layout_alignParentLeft="true"
  android:layout_toLeftOf="@+id/spinner_number6"
  android:gravity="center_vertical|left"
  android:id="@+id/spinner_data6"
  />
  </RelativeLayout>
  </LinearLayout>
  <ImageView style="@style/east_common_line"/>
  <LinearLayout
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  style="@style/text_black_title"
  android:text="辅料"/>
  <Spinner
  style="@style/east_spinner_style"
  android:id="@+id/order_back_accessory_sp"/>
  </LinearLayout>
  <ImageView style="@style/east_common_line"/>
  <RelativeLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <EditText
  android:layout_width="50dip"
  android:layout_height="30dip"
  android:gravity="center"
  android:text="0"
  android:numeric="integer"
  android:layout_centerVertical="true"
  style="@style/text_black_title"
  android:id="@+id/order_back_accessory_num"
  android:background="@drawable/input_selector"/>
  
  <Button 
  	style="@style/list_title_style1"
	android:id="@+id/order_back_add" 
	android:layout_width="60dip" 
	android:layout_height="36dip"
	android:layout_marginLeft="10dip"
	android:layout_marginRight="10dip"
	android:text="添加"
	android:gravity="center"
	android:background="@drawable/east_big_button"
	android:layout_centerVertical="true"
	android:layout_alignParentRight="true"
	/>
	<SeekBar
	android:layout_toLeftOf="@+id/order_back_add"
	android:layout_toRightOf="@+id/order_back_accessory_num"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:paddingLeft="6dip"
  android:max="50"
  android:layout_centerVertical="true"
  android:id="@+id/order_back_accessory_sb"/>
  </RelativeLayout>
  <LinearLayout
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:paddingLeft="10dip"
  android:id="@+id/order_back_mater_items"/>
  <ImageView style="@style/east_common_line"/>
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  style="@style/text_black_title"
  android:text="回单备注"/>
  <EditText
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:minLines="2"
   android:gravity="top|left"
  android:padding="5dip"
  android:background="@drawable/east_edit_login"
  android:id="@+id/order_back_accessory_beizhu"/>
  <ImageView style="@style/east_common_line"/>
  <LinearLayout
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  style="@style/text_black_title"
  android:text="是否NGB区域(*)"/>
  <Spinner
  style="@style/east_spinner_style"
  android:entries="@array/NGBs"
  android:id="@+id/order_back_isngb"/>
  </LinearLayout>
  <ImageView style="@style/east_common_line"/>
</LinearLayout>
</ScrollView>