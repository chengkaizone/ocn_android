<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="@drawable/tile_bg"
	android:layout_width="match_parent" android:layout_height="match_parent"
	>
	<include android:layout_width="fill_parent"
		android:layout_height="40dip" layout="@layout/base_title" />
		<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="10dip"
		android:orientation="vertical">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingLeft="10dip"
		android:paddingTop="10dip" style="@style/text_black_title"
		android:text="旧密码:" />
	<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:background="@drawable/east_edit_login"
		android:paddingLeft="10dip" android:saveEnabled="true"
		android:paddingTop="10dip" android:password="true" android:id="@+id/set_old"
		android:hint="请输入旧密码" />
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingLeft="10dip"
		android:paddingTop="10dip" style="@style/text_black_title"
		android:text="新密码:" />
	<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:background="@drawable/east_edit_login"
		android:paddingLeft="10dip" android:saveEnabled="true"
		android:paddingTop="10dip" android:password="true" 
		android:id="@+id/set_news1"
		android:hint="请输入新密码" />
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingLeft="10dip"
		android:paddingTop="10dip" style="@style/text_black_title"
		android:text="确认新密码:" />
	<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:background="@drawable/east_edit_login"
		android:paddingLeft="10dip" android:saveEnabled="true"
		android:paddingTop="10dip" android:password="true" 
		android:id="@+id/set_news2"
		android:hint="请再次输入新密码" />
	<Button android:layout_marginTop="10dip"
		android:layout_marginLeft="0dip" android:text="保存"
		android:id="@+id/set_save_button" android:textAppearance="@style/list_title_style"
		android:layout_width="match_parent" android:layout_marginRight="0dip"
		android:layout_height="wrap_content" android:background="@drawable/east_big_button"/>
		</LinearLayout>
</LinearLayout>
