<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <include
  android:layout_width="fill_parent"
  android:layout_height="40dip"
  layout="@layout/base_title"/>
<ScrollView
  android:fadingEdge="none"
  android:background="@color/white"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <LinearLayout
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <LinearLayout
  android:background="@color/moccasin"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
<TextView 
	android:gravity="center"
	android:layout_gravity="center_horizontal"
	android:layout_width="fill_parent"  android:textSize="18sp"
	android:layout_height="wrap_content" style="@style/text_black_title"
	android:paddingLeft="6dip" android:paddingRight="6dip"
	android:paddingTop="10dip" android:text="sdksjhfdks" 
	android:id="@+id/notice_detail_title" />
<TextView 
	android:gravity="center"
	android:layout_gravity="center_horizontal"
	android:layout_width="fill_parent" android:textSize="12sp"
	android:textColor="@color/red"
	android:layout_height="wrap_content" style="@style/text_black_title"
	android:paddingLeft="6dip" android:paddingRight="6dip"
	android:paddingTop="10dip" android:text="sdsjhfk" 
	android:id="@+id/notice_detail_date" />
	</LinearLayout>
	<ImageView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:src="@drawable/gray_divider"/>
<TextView 
	android:layout_gravity="center_horizontal"
	android:layout_width="fill_parent"	android:textSize="15sp"
	android:layout_height="wrap_content" style="@style/text_black_title"
	android:paddingLeft="6dip" android:paddingRight="6dip"
	android:paddingTop="10dip" android:text="lksdhflksd" 
	android:id="@+id/notice_detail_content" />
</LinearLayout>
</ScrollView>
</LinearLayout>