<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
	android:layout_height="80dip"
	android:focusable="true"
	android:focusableInTouchMode="true"
	android:background="@drawable/menu_bg2"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<TableLayout android:gravity="bottom" 
		android:id="@+id/top_menu_tablayout"
		android:paddingTop="2.0dip" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TableRow android:gravity="center_vertical" android:id="@+id/menu_tabrow_2"
			android:layout_width="fill_parent" android:layout_height="65.0dip">
			<LinearLayout android:gravity="center"
			    android:background="@drawable/menu_background_below"
				android:orientation="vertical" android:id="@+id/menu_home"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginRight="1.0dip" android:layout_weight="1.0">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:src="@drawable/ic_menu_info" />
				<TextView android:textColor="@color/menu_text_color"
					android:gravity="center" android:layout_width="73.0dip"
					android:layout_height="wrap_content" android:text="用户信息" />
			</LinearLayout>
			<LinearLayout android:gravity="center"
				android:orientation="vertical" android:id="@+id/menu_update"
				android:background="@drawable/menu_background_below"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginRight="1.0dip" android:layout_weight="1.0">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:src="@drawable/ic_menu_updateversion" />
				<TextView android:textColor="@color/menu_text_color"
					android:gravity="center" android:layout_width="73.0dip"
					android:layout_height="wrap_content" android:text="更新版本" />
			</LinearLayout>
			<LinearLayout android:gravity="center"
				android:orientation="vertical" android:id="@+id/menu_password"
				android:background="@drawable/menu_background_below"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginRight="1.0dip" android:layout_weight="1.0">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:src="@drawable/ic_menu_password" />
				<TextView android:textColor="@color/menu_text_color"
					android:gravity="center" android:layout_width="73.0dip"
					android:layout_height="wrap_content" android:text="修改密码" />
			</LinearLayout>
			<LinearLayout android:gravity="center"
				android:orientation="vertical" android:id="@+id/menu_exit"
				android:background="@drawable/menu_background_below"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_weight="1.0">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:src="@drawable/ic_menu_quit" />
				<TextView android:textColor="@color/menu_text_color"
					android:gravity="center" android:layout_width="73.0dip"
					android:layout_height="wrap_content" android:text="退出" />
			</LinearLayout>
		</TableRow>
	</TableLayout>
	<ImageView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:src="@drawable/menu_top_bg"
		android:layout_alignTop="@id/top_menu_tablayout" />
</RelativeLayout>

