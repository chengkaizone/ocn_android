<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
	android:padding="10.0dip" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:background="#ffffffff"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_marginTop="1.5dip" android:layout_marginBottom="1.5dip">
		<ImageView android:layout_width="30dip" android:scaleType="fitCenter"
		android:layout_centerVertical="true" android:id="@+id/download_icon"
			android:layout_height="30dip" android:src="@drawable/icon" />
		<TextView android:textColor="#ff8e8e8e" android:id="@+id/download_title"
		android:layout_centerVertical="true" android:layout_toRightOf="@id/download_icon"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="正在下载apk文件" android:layout_weight="1.0" />
		
	</RelativeLayout>
	<RelativeLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	>
	<TextView android:textColor="#ff8e8e8e" android:id="@+id/download_percent"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:text="23%" />
	<ProgressBar android:layout_gravity="center_vertical" 
			android:layout_centerVertical="true"
	android:layout_toRightOf="@id/download_percent"
		android:id="@+id/download_pb" android:layout_width="fill_parent"
		android:layout_height="10.0dip" style="?android:attr/progressBarStyleHorizontal" />
	</RelativeLayout>
</LinearLayout>
